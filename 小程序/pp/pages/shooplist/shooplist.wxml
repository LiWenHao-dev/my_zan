<!--pages/shooplist/shooplist.wxml-->
<!--商品列表-->
<view class='shop' wx:for="{{list}}" wx:key="item.id">
 <image src='' class='shop-img'></image>
 <view class="shop-info">
  <text class="shop-title">{{item.title}}</text>
  <text class="shop-tel">电话：{{item.pid}}</text>
  <text class="shop-address">地址：万寿路</text>
  <text class="shop-time">营业时间：9:00-10:00</text>
 </view>
 <view class="stop-star">
  <view class="star-after">★★★★★</view>
  <view class="star-before">★★★★★</view>
 </view>
</view>
<view wx:if="{{!hasMore}}">已经没有更多的数据了</view>
