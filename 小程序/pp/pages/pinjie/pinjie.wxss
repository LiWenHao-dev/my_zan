page{background:#f1f1f1;}
.card{background:#fff;border:1px solid #ddd;border-radius:20rpx;margin:50rpx 20rpx;display: flex;flex-direction: column;box-sizing:border-box;padding:10px;}
.card-price{font-size:20px;margin-bottom:5rpx;}
.card-title{font-size:14px;color:#ccc;padding-bottom: 20rpx;margin-bottom: 20rpx;border-bottom:1rpx solid #ddd;}
